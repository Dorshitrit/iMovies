<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.dorsh.imovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.app.dorsh.imovies.ui.MainActivity"
            android:label="@string/app_name"
            android:supportsRtl="false"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.dorsh.imovies.ui.AddMovie"
            android:label="@string/title_activity_add_movie"
            android:supportsRtl="false"
            android:parentActivityName="com.app.dorsh.imovies.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.app.dorsh.imovies.ui.ViewMovie"
            android:label="@string/title_activity_view_movie"
            android:supportsRtl="false"
            android:parentActivityName="com.app.dorsh.imovies.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.app.dorsh.imovies.ui.EditMovie"
            android:label="@string/title_activity_edit_movie"
            android:supportsRtl="false"
            android:parentActivityName="com.app.dorsh.imovies.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>